c0  = [0, 1, 2/3, 1/3,    2/3, 1/3, 2/3, 1/3] 
c1  = [2/3, 1/3, 0, 1,    2/3, 1/3, 2/3, 1/3]
c2  = [2/3, 1/3, 2/3,     1/3, 0, 1, 2/3, 1/3]
c3  = [2/3, 1/3, 2/3,     1/3, 2/3, 1/3, 0, 1]


#offSeg w.r.t c0
s0  = [1/3, 2/3, 1/3, 2/3, 1/3, 2/3, 1/3, 2/3]
s1  = [1/3, 2/3, 1, 0, 1/3, 2/3, 1/3, 2/3]

## offsegment s1 w.r.t c0
for i in range(8):
   print (s1[i]-c0[i])

## onegment s1 w.r.t c1
for i in range(8):
   print (s1[i]-c1[i])
